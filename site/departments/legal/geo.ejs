<%- include(consV.layouts.head , {also_add:[consV.css.slideshow,
consV.css.boxes , consV.css.article, consV.css.customBS]})%>
<body>
	<%- include( consV.layouts.nodeJsObToClientJsOb , {varName: "altPage" , varValue: altPage })%>
	
	<%- include( consV.layouts.nodeJsObToClientJsOb , {varName: "lang" , varValue: lang })%>
	
	<%- include(consV.layouts.header)%>
	<%- include(consV.layouts.sidebar_navbar, {active:["enc", "legal"]})%>
	<%- include(consV.layouts.navbar , {active: "legal", stick: true})%>
	<div class="container-fluid">
		<div class="row justify-content-center">
			<!-- main -->
			<main class="col-md-8 ml-md-5 pl-md-1 pr-md-0">
				<div class="mt-4"></div>
					<video controls>
						<source src="<%=art.VideoUrl%>" type="video/mp4">
					</video>
				<div class="mt-4"></div>
				<%if(typeof art != 'undefined'){%>
					<%- include(consV.layouts.article , {artH: art.Title , artC: art.Content, artURL: ""}) %>
				<%}%>
				<!-- morba ha -->
				<div class="WaveBox_con">
					<ul class="FlexCen">
						<div class="WaveBox">
							<a href="<%='/' + lang + ''%>">
								<div class="wave_one"></div>
								<div class="wave_two"></div>
								<div class="WaveBox_title"><%=i18n.__("ثبت نام")%></div>
							</a>
						</div>
					</ul>
				</div>
				<!-- morba ha end -->

			</main>
			<!-- main end -->
			<!-- sidebar -->
			<div class="col-md-3 ml-4 mr-3">
				<div id="aside_container">
					<%- include(consV.layouts.melement,
					{
						melementText: 'کانال تلگرام اقامت گرجستان',
						url: '/' + lang + consV.pages.departments.legal.geo,
						faIcon: 'fab fa-telegram',
						BGColor: '#6200ee'
					})%>
					<div class="my-3"></div>
				</div>
			</div>
			<!-- sidebar end -->
		</div>
	</div>
	<%- include(consV.layouts.footer, {OverlayOnClick: "closeSN()"})%>
	<!-- scripts -->
	<%- include(consV.layouts.scripts , {also_add:[consV.js.main , consV.js.slideshow, consV.js.sign]}) %>
	
	<!-- scripts end -->
</body>
</html>
