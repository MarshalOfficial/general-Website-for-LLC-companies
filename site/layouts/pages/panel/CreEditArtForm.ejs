<form id="createArtForm" method="post" action="<%=formActionUrl%>"
encType="multipart/form-data" onsubmit="<%=formOnSubmit%>">
	<div class="form-row">
		<div class="col-4">
			<label class="Font18px" for="artPageName">
				صفحه
			</label>
			<select id="artPageName" name="artPageName" class="custom-select FontIranSans" onchange=<%=artPageNamechange%>>
			</select>
		</div>
		<div class="col-4">
			<label class="Font18px" for="artDepartment">
				دپارتمان
			</label>
			<select id="artDepartment" name="artDepartment" class="custom-select FontIranSans mr-2">
			</select>
		</div>
		<div class="col-4">
			<label class="Font18px mr-3" for="artPageLang">
				زبان مقاله
			</label>
			<select id="artPageLang" name="artPageLang" class="custom-select FontIranSans mr-3" onchange=<%=langOnchange%>>
				<%consV.site.langs.inArray.forEach( (el , i) =>
				{%>
					<option value="<%=el%>" <%if(i == 0){%>selected<%}%> ><%=i18n.__(consV.site.langs[el].name)%></option>
				<%});%>
			</select>
		</div>
	</div>

	<div class="form-group sr-only">
		<input id="spaceFolderName" name="spaceFolderName" type="text">
	</div>

	<div class="form-group mt-3">
		<label class="Font18px" for="treeTitle">
			تیتر
			<%- include( consV.layouts.questionMark , {QMTitlle: "تیتر سایدبار دانشنامه" , QMContent: "متنی که در نوار سمت راست صفحه ی دانشنامه است"} ) %> 
		</label>
		<input id="treeTitle" name="treeTitle" class="form-control" type="text">
	</div>
	<div class="form-group">
		<label class="Font18px" for="articleVideoUrl">
			لینک ویدیو
			<%- include( consV.layouts.questionMark , {QMTitlle: "لینک ویدوی" , QMContent: "لینک"} ) %> 
		</label>
		<input id="articleVideoUrl" name="articleVideoUrl" class="form-control" type="text">
	</div>
	<div class="form-group">
		<label class="Font18px" for="editor">
			مقاله
		</label>
		<textarea id="editor" name="articleContent" class="form-control">
			موفق باشید
		</textarea>
	</div>
	
	<button id="CreEditArtSubmit" type="submit" class="btn btn-primary col-md-3 m-auto d-block"><%=formSubmitText%></button>
</form>
<!-- Upload file Form. For tinyMce -->
<form id="uploadImageForm" method="post" action="<%='/' + lang + consV.pages.panel.article.uploadFile%>"
 onsubmit="CEAFSendFile(event)" encType="multipart/form-data" style="display:none;">
	<input id="spaceFolderAddress" name="spaceFolderAddress" type="text">
	<input id="file" name="file" type="file"
	onchange="$('#uploadImageForm').submit();this.value=''">
	<button type="submit"></button>
</form>
<!-- Upload file Form. For tinyMce end -->