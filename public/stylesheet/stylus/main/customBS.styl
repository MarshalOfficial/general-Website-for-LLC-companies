
/********************************** custom bootstrap section **********************************/
/* rtl dropdown, remove margins start */
.dropdown
{
	direction: rtl;
}
.dropdown-menu
{
	/*left: auto;*/
	margin: 0;
	margin-right: -1px;

	font-size: 14px;
	text-align: right;

	border-radius: 4px 2px 4px 4px;
	animation-duration: 0.3s;
	box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
}
.dropdown-menu h5[class="dropdown-header"]
{
	padding: 3px 1.5rem;
}

.dropdown-toggle::after
{
	display: none;
}

.navbar-light .navbar-nav .nav-link
{
	color: rgba(0,0,0,0.7);
}
.navbar .nav-item .nav-link
{
	color: rgba(0,0,0,0.7);
}
.navbar .nav-item .nav-link:hover
{
	color: rgba(0,0,0,0.8);
}
.navbar .active
{
	background-color: #e7e7e7;
}
.nav-item
{
	padding: 7px;
	padding-top: 9px;
}
/* navar items color end */

/* remove default input outline start */
input:focus
{
	outline: none;
}
/* remove default input outline end */

/* cards start */
.card-title
{
	line-height: inherit;
	margin-bottom: 0;
}
h6.card-title
{
	font-size: 1rem;
}
/* cards end */

/* popover start */
.popover-title
{
	-webkit-font-smoothing: antialiased;
	text-shadow: 0 1px 1px rgba(0 , 0 , 0 , 0.1);
}
.popover-content
{
	-webkit-font-smoothing: antialiased;
	text-shadow: 0px 1px 1px rgba(51, 122 , 183 , 0.1);
}
.popover
{
	box-shadow: 0 3px 11px rgba(0, 0 , 0 , 0.3);
}
.popover::before
{
	content: none;
}
.popover::after
{
	content: none;
}
/* popover end */
/********************************** custom bootstrap section end **********************************/
