}
.navbar_custom
{
	font-size: 17px;
	letter-spacing: normal;
}
#mpanelNavbar .nav-item 
{
	margin: auto;
}
// Bootstrap Override
.form-control
{
	padding: 10px;
	font-family: font-iransans;
	box-shadow: boxShadow;
}

.form-control:focus
{
	outline: 0;
	border-color: #5cb3fd;
	box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);
}
.form-control:hover
{
	outline: 0;
	border-color: #5cb3fd;
	box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);
}
.form-control-warning
{
	border-color: yellow;
}
.custom-select
{
	text-align-last: center;
	box-shadow: boxShadow;
}
.btn
{
	padding: 9.5px 23px;
	font-family: font-iransans;
	font-weight: bold;
	font-size: 17px;
	box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}
#nonArtsListDiv ul li a
{
	color: inherit;
}

// tinymce
.mce-panel
{
	background-color: #f0f0f0 !important;
}
.mce-container
{
	border-radius: 0.25rem;
}
.mce-fullscreen
{
	z-index: 2000 !important;
}
.mce-menu
{
	z-index: 70000 !important;
	background-color: #f8f8f8 !important;
}
.mce-menubar .mce-menubtn button span
{
	color: #333333 !important;
}
.mce-btn button, .mce-btn i, .mce-txt, .mce-btn .mce-txt, .mce-menubtn.mce-fixed-width span, .mce-menubtn button
{
	color: #333333;
}
.mce-btn-group .mce-btn
{
	background-color: #f0f0f0;
	border-color: #f0f0f0 !important;
	border-radius: 4px;
}
.mce-btn.mce-active, .mce-btn.mce-active:hover, .mce-btn.mce-active:focus, .mce-btn.mce-active:active
{
	color: white !important;
	background-color: #555c66 !important;
}

form .form-row label, form .form-group label
{
	float: right ;
	box-shadow: boxShadow;
}