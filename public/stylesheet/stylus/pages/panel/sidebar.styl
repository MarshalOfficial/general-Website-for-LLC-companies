.panSidebar
{
	height: 100vh;

	font-size: 17px;
	
	background-color: #222d32;

	overflow-x: hidden;
	overflow-y: auto;
}
.panSidebar .nav-link
{
	color: white;
}
.panSidebar .nav-item
{
	width: 100%;
	margin-bottom: 10px;
	text-align: right;
	border-radius: .25rem;
}
.panSidebar .nav-link i
{
	float: left;
	margin-top: 3px;
}
.panSidebarMenu
{
	-webkit-padding-start: 0;
	// padding-top: 5px;
	direction: rtl;
}
.panSidebarMenu li
{
	padding-right: 40px;
	padding-top: 9px;
	padding-bottom: 9px;
	border-radius: .25rem;
}
.panSidebarMenu li[class="active"]
{
	background-color: #4e565a;
}
.panSidebarMenu a
{
	color: white;
}
.panBG
{
	background-color: #384246;
}