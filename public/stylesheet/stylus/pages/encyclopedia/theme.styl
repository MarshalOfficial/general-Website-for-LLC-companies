.location_bar
{
    position: relative;
    align-items: center;

    min-height: 34px;
    margin-top: 10px;

    font-family: 'IRANSans';
    font-size: 15px;
    border-radius: 4px;
    background-color: #f5f5f5;
    color: #555555;
    box-shadow: 0 0 8px rgba(0, 0 , 0 , 0.23);
}
.location_bar_div
{
    padding-top: 9px;
    padding-bottom: 6px;
    padding-right: 17px;
    padding-left: 17px;
}
.location_bar .fa
{
    vertical-align: middle;
    margin-bottom: 1px;
}
.articleStuffCon
{
    position: relative;
	display: block;

	min-height: 70px;
	margin-top: 20px;
	padding: 36px 20px 20px 36px;

	font-family: 'IRANSans';
	text-align: right;

	border-radius: 4px;

	background-color: #f5f5f5;
	color: rgb(20,20,20);
	box-shadow: 0 3px 11px rgba(0, 0 , 0 , 0.3);
}
@media (min-width: 576px)
{
	.articleStuffCon
	{
		padding: 36px;
	}
}
