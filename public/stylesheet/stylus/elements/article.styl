.education_article
{
	position: relative;
	display: block;

	// margin-top: 20px;
	padding: 36px 20px 15px 17px;

	font-family: 'IRANSans';
	text-align: right;
	font-size: 1.0625rem;

	border-radius: 4px;

	background-color: #f5f5f5;
	color: rgb(20,20,20);
	box-shadow: 0 3px 11px rgba(0, 0 , 0 , 0.3);
}
@media (min-width: 576px)
{
	.education_article
	{
		padding: 36px 36px 20px;
	}
}
// article header
#article_header
{
	position: absolute;
	display: flex;
	float: right;
	height: 45px;
	min-width: 220px;
	max-width: 100%;

	background: rgb(3 , 137 , 170) linear-gradient(rgb(3 , 137 , 170) 0% , rgb(0 , 97 , 127) 100%);
	color: rgb(221, 221, 221);

	box-sizing: border-box;
	box-shadow: rgba(0 , 0 , 0 , 0.3) 0 1px 5px 0 , rgba(255, 255, 255, 0.2) 0 1px 0 0 inset, rgba(0, 0, 0, 0.3) 0 -1px 0 0 inset;

	text-shadow: rgba(0 , 0 , 0 , 0.5) 0 1px 3px;
	border: 0 none rgb(221 , 221 , 221);
	border-radius: 4px 0 4px 4px;
	margin: -10px -30px 0 0;
}
@media (min-width: 576px)
{
	#article_header
	{
		min-width: 280px !important;
		margin: -10px -46px 0 0;
	}
}
#article_header:before
{
	display: block;
	position: absolute;
	content: '';

	height: 10px;
	width: 10px;
	right: 0;
	top: -10px;

	transform: rotatey(180deg);

	border-top: 5px solid rgba(0 , 0 , 0 , 0);
	border-right: 5px solid rgb( 0 , 97 , 127);
	border-bottom: 5px solid rgb( 0 , 97 , 127);
	border-left: 5px solid rgba(0 , 0 , 0 , 0);
}

#article_header_icon
{
	position: relative;
	float: right;

	margin-right: 11px;
	margin-top: 8px;
	font-size: 28px;

	text-align: right;

	color: white;
}
#article_header_text
{
	position: relative;
	float: right;
	direction: rtl;

	margin-top: auto !important;
	margin-bottom: auto!important;
	margin-right: 10px !important;

	font-family: 'IRANSans';
	font-size: 1.1875rem;
	font-weight: 500;

	text-align: right;

	color: white;
}
.articleContentCss
{
	margin-top: 50px;
	line-height: 1.7;
	letter-spacing: -0.2px;
	overflow: hidden;
	text-align: justify;
}

.articleContentCss strong
{
	font-weight: 500;
}
.articleContentCss .mce-toc
{
	border: 2px solid #ddd;
	border-radius: 4px;
	padding: 0px;
	padding-top: 10px;
	margin-top: 10px;
	margin-bottom: 10px;
}
.articleContentCss h1
{
	font-size: 1.75rem; //28px
	line-height: inherit;
}
.articleContentCss h2
{
	font-size: 1.5625rem; //25px
	line-height: inherit;
}
.articleContentCss h3
{
	font-size: 1.375rem; //22px
	line-height: inherit;
}
.articleContentCss h4
{
	font-size: 1.1875rem; //19px
	line-height: inherit;
}
.articleContentCss h5
{
	font-size: 1rem; // 16px
	line-height: inherit;
}

@media (min-width: 576px)
{
	.articleContentCss
	{
		margin-top: 60px;
	}
	.articleContentCss .mce-toc
	{
		padding: 15px;
		margin-top: 15px;
		margin-bottom: 15px;
	}
}
.articleContentCss img
{
	max-width: 100%;
	height: auto;
	
	border-radius: .25rem;

	transition: all .2s ease-in-out;
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

// article header left
.article_header_left
{
	position: absolute;
	display: flex;
	left: 0;
	margin-top: -46px;

	height: 60px;

	min-width: 54px;
	max-width: 70px;
	// width: 48px;
	

	text-align: center;
	line-height: 1.3;
	// background: rgb(3 , 137 , 170) linear-gradient(rgb(3 , 137 , 170) 0% , rgb(0 , 97 , 127) 100%);
	background: #009688 linear-gradient( #009688 0% , #00695c 100%);
	color: rgb(221, 221, 221);

	box-sizing: border-box;
	box-shadow: rgba(0 , 0 , 0 , 0.3) 0 1px 5px 0 , rgba(255, 255, 255, 0.2) 0 1px 0 0 inset, rgba(0, 0, 0, 0.3) 0 -1px 0 0 inset;

	text-shadow: rgba(0 , 0 , 0 , 0.5) 0 1px 3px;
	border: 0 none rgb(221 , 221 , 221);
	// border-radius: 0px 4px 4px 4px;
	border-radius: 0px 0px 4px 4px;
}
@media (min-width: 576px)
{
	.article_header_left
	{	
		height: 70px;
		
		min-width: 54px;
		max-width: 70px;
	}
}
.article_header_left:before
{
	display: block;
	position: absolute;
	content: '';

	height: 10px;
	width: 10px;
	left: -10px;

	border-top: 5px solid rgba(0 , 0 , 0 , 0);
	// border-right: 5px solid rgb( 0 , 97 , 127);
	// border-bottom: 5px solid rgb( 0 , 97 , 127);
	border-right: 5px solid #00796b;
	border-bottom: 5px solid #00796b;
	border-left: 5px solid rgba(0 , 0 , 0 , 0);
}

.article_header_left:after
{
	display: block;
	position: absolute;
	content: '';

	height: 10px;
	width: 10px;
	right: -10px;
	top: 0px;

	transform: rotatey(180deg);

	border-top: 5px solid rgba(0 , 0 , 0 , 0);
	// border-right: 5px solid rgb( 0 , 97 , 127);
	// border-bottom: 5px solid rgb( 0 , 97 , 127);
	border-right: 5px solid #00796b;
	border-bottom: 5px solid #00796b;
	border-left: 5px solid rgba(0 , 0 , 0 , 0);
}

.article_header_left_text
{
	margin: auto;
	padding-top: 2px;	
	line-height: 1.5;
	direction: rtl;

	font-family: 'IRANSans';
	font-size: 0.9rem;
	font-weight: bold;
	line-height: 1.7;

	text-align: center;

	color: white;
}