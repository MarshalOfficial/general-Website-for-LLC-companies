#approve_rate
{
	padding-bottom: 0 !important;
}
#approve_rate_content
{
	margin-top: -16px;
	font-size: 1.0625rem;
	direction: rtl;
}
#approve_rate_content .fa-stack 
{
	vertical-align: bottom;
	text-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
	font-size: 0.9375rem;
	margin-right: -12px;
}
@media (max-width: 576px)
{
	#approve_rate_content .fa-stack 
	{
		margin-right: -3px;
	}
}
#approve_rate_content #apRate
{
	font-weight: bold;
	color: green;
}

// article header left
#approve_rate_left
{
	height: 42px;
	width: initial;
	min-width: 46px;
}
@media (min-width: 576px)
{
	#approve_rate_left
	{
		height: 50px;
		width: initial;
		min-width: 54px;
	}
}